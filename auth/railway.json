{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "watchPatterns": ["src/**/*", "package.json"],
    "buildCommand": null
  },
  "deploy": {
    "startCommand": "bun start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "NEVER",
    "restartPolicyMaxRetries": 0
  }
}
